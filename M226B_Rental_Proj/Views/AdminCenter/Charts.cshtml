
@{
    ViewBag.Title = "Index";
}

<h3 class="text-primary text-center">
    AD-CENTRE
</h3>
<div class"row">
    <div class="col-sm-6 text-center">
        <label class="label label-success">Area Chart</label>
        <div id="area-chart"></div>
    </div>
</div>


@foreach (Order order in Model.CarList)
{
    Model.CarSumme += order.PriceVehicle;
}

@foreach (Order order in Model.LKWList)
{
    Model.LKWSumme += order.PriceVehicle;
}

<h1>@Model.CarSumme</h1>
<h1>@Model.LKWSumme</h1>

<div id="piechart"></div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
    // Load google charts
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);

    // Draw the chart and set the chart values
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['Vehicle', 'Monthly Income'],
            ['LKW', @Model.CarSumme],
            ['CAR', @Model.LKWSumme]
        ]);

        // Optional; add a title and set the width and height of the chart
        var options = { 'title': 'My Average Day', 'width': 550, 'height': 400 };

        // Display the chart inside the <div> element with id="piechart"
        var chart = new google.visualization.PieChart(document.getElementById('piechart'));
        chart.draw(data, options);
    }
</script>

